{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"lib": ["esnext", "dom", "es2016"],
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"strictNullChecks": true,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"paths": {
			"@src/*": ["./*"],
			"@modules/*": ["./modules/*"],
			"@models": ["./models/index"],
			"@models/*": ["./models/*"],
			"@configs": ["./configs/index"],
			"@configs/*": ["./configs/*"],
			"@utils": ["./utils/index"],
			"@utils/*": ["./utils/*"],
			"@types": ["./types/index"],
			"@types/*": ["./types/*"],
			"@generated/*": ["./generated/*"]
		},
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["src/**/*"],
	"exclude": ["src/generated/tmp-resolvers/**/*"]
}
