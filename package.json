{
	"name": "clean-graphql-boilerplate",
	"description": "Fully-feature modularized GraphQL Server boilerplate with production-ready containerized workflow.",
	"version": "0.0.0",
	"scripts": {
		"build": "sh ./scripts/build-src.sh",
		"start": "ts-node -r tsconfig-paths/register src/index.ts",
		"start:dev": "nodemon",
		"start:debug": "nodemon --config nodemon-debug.json",
		"prestart:prod": "rimraf dist && yarn build",
		"start:prod": "node -r ./tsconfig-paths-bootstrap.js dist/index.js",
		"watch": "nodemon -e ts,graphql --ignore src/generated/schema.graphql -x ts-node -r dotenv/config src/index.ts",
		"debug": "yarn watch-debug",
		"watch-debug": "nodemon -e ts,graphql --ignore src/generated/schema.graphql --inspect -r ts-node/register src/index.ts",
		"test": "jest --verbose",
		"test:watch": "jest --verbose --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"lint": "tslint -p tsconfig.json -c tslint.json -e \"./src/generated/*.ts\"",
		"lint:fix": "yarn lint --fix",
		"prettier": "prettier --config .prettierrc --write \"./src/{!(generated)/**/,}*.{ts,graphql}\" \"test/**/*.ts\"",
		"format": "yarn prettier && yarn lint:fix",
		"playground": "graphql playground",
		"gen-datamodel": "ts-node prisma/datamodel.ts",
		"prisma-deploy": "yarn gen-datamodel && prisma deploy",
		"seed": "ts-node seed/index.ts"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/WhatTheFar/express-gateway-plugin-cas.git"
	},
	"author": "Jakpat Mingmongkolmitr",
	"license": "ISC",
	"dependencies": {
		"bcryptjs": "2.4.3",
		"class-transformer": "^0.2.0",
		"class-validator": "^0.9.1",
		"graphql": "14.0.2",
		"graphql-middleware": "^2.0.2",
		"graphql-shield": "^4.1.2",
		"graphql-tag": "2.10.0",
		"graphql-tools": "4.0.3",
		"graphql-upload": "^8.0.2",
		"graphql-yoga": "1.16.7",
		"graphql-yup-middleware": "^0.0.1",
		"graphqlgen": "^0.4.0",
		"jsonwebtoken": "8.4.0",
		"lodash": "^4.17.11",
		"merge-graphql-schemas": "^1.5.4",
		"module-alias": "^2.1.0",
		"prisma-binding": "2.2.11",
		"reflect-metadata": "^0.1.12",
		"tsconfig-paths": "^3.8.0",
		"type-graphql": "^0.15.0",
		"typedi": "^0.8.0",
		"util": "^0.11.0",
		"yup": "^0.26.6"
	},
	"devDependencies": {
		"@types/bcryptjs": "2.4.2",
		"@types/jest": "^23.3.2",
		"@types/jsonwebtoken": "^8.3.0",
		"@types/lodash": "^4.14.116",
		"@types/supertest": "^2.0.6",
		"@types/yup": "^0.26.0",
		"dotenv": "6.2.0",
		"graphql-cli": "3.0.3",
		"graphql-request": "^1.8.2",
		"jest": "^23.6.0",
		"nodemon": "1.18.9",
		"npm-run-all": "4.1.5",
		"prettier": "^1.12.1",
		"prettierrc": "^0.0.0-5",
		"prisma": "1.22.2",
		"rimraf": "^2.6.3",
		"supertest": "^3.3.0",
		"ts-jest": "^23.10.1",
		"ts-node": "7.0.1",
		"tslint": "^5.10.0",
		"typescript": "3.2.2"
	}
}
